<div class="container">
    <div class="row">
        <div class="col-5">
            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %> </li>
                        <% }) %>
                    </ul>
                  </div>
            <% } %>
            <form method="post" action="/contact/update" class="mt-5">
                <input type="hidden" name="oldNama" value="<%= contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control" id="nama" name="nama" aria-describedby="nama" value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" name="email" aria-describedby="email" value="<%= contact.email %>">
                </div>
                <div class="mb-3">
                    <label for="nohp" class="form-label">No HP</label>
                    <input type="text" class="form-control" id="nohp" name="nohp" aria-describedby="nohp" value="<%= contact.nohp %>">
                </div>
                <button type="submit" class="btn btn-primary">edit data</button>
              </form>

        </div>
    </div>
</div>